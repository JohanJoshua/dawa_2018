html
	head
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title Sistema
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		
	body
		block content
			.main.container
				.row
					.col-md-6.col-md-offset-3
						h1.display-4.m-b-2 Editar Precio
						form(method='POST' action='/editPrice')
							div.form-group
								label(for='id') ID:
								input.form-control(type='text' name='_id' value=data._id)
							div.form-group
								label(for='nombre') Precio:
								input.form-control(type='text' name='precio' value=data.precio)
							button.btn.btn-primary(type='submit') Grabar
							button.btn.btn-basic
								a(href="/price") Regresar
			